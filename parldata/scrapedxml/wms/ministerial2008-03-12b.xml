<speech id="uk.org.publicwhip/wms/2008-03-12b.17WS.2" speakerid="uk.org.publicwhip/member/1899" speakername="Angela Eagle" speakeroffice="The Exchequer Secretary to the Treasury" colnum="17WS"  url="http://www.publications.parliament.uk/pa/cm200708/cmhansrd/cm080312/wmstext/80312m0001.htm#08031239000010">
