<ques id="uk.org.publicwhip/spwa/2008-12-19.S3W-18670.q0" speakerid="uk.org.publicwhip/member/80291" speakername="Robert Brown (Glasgow) (LD)" spid="S3W-18670" url="http://www.scottish.parliament.uk/business/pqa/wa-08/wa1219.htm#8">

