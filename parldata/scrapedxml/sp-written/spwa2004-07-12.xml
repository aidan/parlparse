<reply id="uk.org.publicwhip/spwa/2004-07-12.3.r0" speakerid="uk.org.publicwhip/member/80053" speakername="Cathy Jamieson" url="http://www.scottish.parliament.uk/business/pqa/wa-04/wa0712.htm#3">

