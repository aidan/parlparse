<ques id="uk.org.publicwhip/spwa/2002-12-04.S1W-31886.q0" speakerid="uk.org.publicwhip/member/80131" speakername="Ms Wendy Alexander (Paisley North) (Lab)" spid="S1W-31886" url="http://www.scottish.parliament.uk/business/pqa/wa-02/wa1204.htm#4">

