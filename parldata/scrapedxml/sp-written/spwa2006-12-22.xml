<ques id="uk.org.publicwhip/spwa/2006-12-22.2.q1" speakerid="uk.org.publicwhip/member/80273" speakername="Tommy Sheridan (Glasgow) (Sol)" spid="S2W-30256" url="http://www.scottish.parliament.uk/business/pqa/wa-06/wa1222.htm#1" holdingdate="2006-12-15">

