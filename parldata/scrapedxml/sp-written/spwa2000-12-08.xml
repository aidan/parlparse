<ques id="uk.org.publicwhip/spwa/2000-12-08.11.q0" speakerid="uk.org.publicwhip/member/80142" speakername="Bruce Crawford (Mid Scotland and Fife) (SNP)" spid="S1W-11537" url="http://www.scottish.parliament.uk/business/pqa/wa-00/wa1208.htm#7">

