<reply id="uk.org.publicwhip/spwa/2001-07-24.10.r0" speakerid="uk.org.publicwhip/member/80131" speakername="Ms Wendy Alexander" url="http://www.scottish.parliament.uk/business/pqa/wa-01/wa0724.htm#8">

