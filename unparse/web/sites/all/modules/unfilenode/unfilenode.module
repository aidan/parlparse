      break;
      case "spoken":
         // name
         preg_match('/<span class="name">(.*?)<\/span>/', $match, $speaker);
 	       $speaker[0] = str_replace('-','&ndash;',$speaker[0]);
 	       $match = preg_replace('/<span class="name">(.*?)<\/span>/', $speaker[0], $match);

